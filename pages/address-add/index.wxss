page {
  height: 100%;
}

.container {
  background-color: #f5f5f9;
  justify-content: initial;
}

.form-box {
  width: 100%;
  background-color: #fff;
}

.row-wrap {
  width: 720rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 28rpx;
  /*justify-content: space-between;*/
}

.row-wrap .label {
  width: 160rpx;
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #555;
  letter-spacing: -0.48px;
  line-height: 100rpx;
}

.row-wrap .label-right {
  flex:1;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #999;
  letter-spacing: -0.96rpx;
  line-height: 100rpx;
}

.row-wrap .label-right input {
  height: 100%;
  font-size: 28rpx;
  padding-right: 30rpx;
}

.row-wrap .right-box {
  margin-right: 30rpx;
}

.arrow-right {
  width: 15rpx;
  height: 24rpx;
}

.save-btn {
  position: fixed;
  left: 24rpx;
  bottom: 32rpx;
  width: 702rpx;
  height: 98rpx;
  background: #FEB21C;
  border-radius: 49rpx;
  text-align: center;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  line-height: 98rpx;
}

button[type="default"] {
  background-color: #fff;
  color: #000;
}

.addr-details {
  height: auto;
  padding: 30rpx 0;
  margin-left: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  font-size: 28rpx;
}

.addr-details .label {
  margin: auto 0 auto 0;
  width: 160rpx;
  color: #000;
}

.addr-details textarea {
  box-sizing: border-box;
  width: 480rpx;
  overflow: scroll;
}

picker {
  min-width: 20rpx;
  height: 100%;
  margin-right: 20rpx;
}

.hui {
  color: #777;
}
