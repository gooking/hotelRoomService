@import "/template/login/index.wxss";
.map {
  width: 100vw;
  height: 100vh;
}

.popup {
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100vw;
  background-color: #fff;
  padding: 24rpx;
}

.popup .title {
  margin-top: 8rpx;
  margin-bottom: 24rpx;
  font-family: PingFangSC-Semibold;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 0;
  line-height: 30rpx;
}

.popup .input {
  width: 702rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #E6E6E6;

  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  line-height: 80rpx;
}

.save-btn {
  margin: 48rpx 0;
  width: 702rpx;
  height: 98rpx;
  background: #FEB21C;
  border-radius: 49rpx;
  text-align: center;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  line-height: 98rpx;
}